{
  "name": "streaks-and-todo",
  "version": "1.0.50",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "format": "biome check --write",
    "db:update": "drizzle-kit push",
    "build-ui": "cd ui && bun run build",
    "build-ui-watch": "cd ui && bun start",
    "dev:all": "concurrently \"bun run dev\" \"bun run build-ui-watch\" --names \"SERVER,UI\" --prefix-colors \"blue,green\"",
    "gen:auth-secret": "bun run scripts/generate-auth-secret.ts",
    "docker:build": "docker build -t flawiddsouza/streaks-and-todo:latest .",
    "docker:push": "docker push flawiddsouza/streaks-and-todo:latest",
    "docker:release": "bun run docker:build && bun run docker:push"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/static": "^1.3.0",
    "better-auth": "^1.3.4",
    "dayjs": "^1.11.19",
    "drizzle-orm": "^0.44.4",
    "elysia": "latest",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "bun-types": "latest",
    "concurrently": "^9.2.0",
    "drizzle-kit": "^0.31.4"
  },
  "module": "src/index.js"
}
